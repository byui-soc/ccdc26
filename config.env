#!/bin/bash
# CCDC Environment Configuration
# ================================
# UPDATE ALL VALUES BELOW BEFORE RUNNING ANY SCRIPTS.
# This is the single source of truth for all IPs, subnets, and usernames.
# Sourced by deploy.sh and Monarch. Also used to generate config.ps1.
#
# After filling in values, set CONFIGURED=true at the bottom of this file.

#=============================================================================
# Splunk Configuration
#=============================================================================
export SPLUNK_SERVER=""          # e.g. 10.0.1.20
export SPLUNK_PORT="9997"
export SPLUNK_WEB_PORT="8000"
export SPLUNK_MGMT_PORT="8089"
export SPLUNK_VERSION=""         # e.g. 10.2.0  (check competition Splunk server)
export SPLUNK_BUILD=""           # e.g. d749cb17ea65  (from Splunk download page)

#=============================================================================
# Network Subnets
#=============================================================================
export LINUX_SUBNET=""           # e.g. 10.0.1.0/24
export WINDOWS_SUBNET=""         # e.g. 10.0.2.0/24
export MANAGEMENT_SUBNET=""      # e.g. 10.0.1.0/24

#=============================================================================
# Host IPs (update per environment)
#=============================================================================
export SPLUNK_HOST=""            # Splunk server IP
export ECOM_HOST=""              # E-commerce server IP
export WEBMAIL_HOST=""           # Webmail server IP
export AD_HOST=""                # Active Directory / DNS server IP
export WEB_WIN_HOST=""           # Windows web server IP
export FTP_HOST=""               # FTP server IP
export WORKSTATION_HOST=""       # Workstation IP

#=============================================================================
# Firewall / Network Device IPs
#=============================================================================
export PALO_ALTO_IP=""           # Palo Alto firewall IP
export CISCO_FTD_IP=""           # Cisco FTD firewall IP
export VYOS_ROUTER_IP=""         # VyOS router IP

#=============================================================================
# Competition Users (names given in competition packet)
#=============================================================================
export COMP_ADMIN1=""            # e.g. ccdcadmin1
export COMP_ADMIN2=""            # e.g. ccdcadmin2
export COMP_USER1=""             # e.g. ccdcuser1

#=============================================================================
# Team Configuration
#=============================================================================
export REPO_URL="https://github.com/byui-soc/ccdc26.git"
export TEAM_NUMBER=""            # e.g. 2
export PASSWORD_SALT=""          # e.g. MyTeam-2026  (for deterministic password gen)

#=============================================================================
# IMPORTANT: Set to true after filling in the values above
#=============================================================================
export CONFIGURED="false"
