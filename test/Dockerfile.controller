FROM ubuntu:22.04
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y \
    python3 python3-pip python3-venv git sshpass bash \
    iproute2 iputils-ping net-tools curl \
    && rm -rf /var/lib/apt/lists/*
RUN pip3 install --break-system-packages paramiko python-dotenv 2>/dev/null \
    || pip3 install paramiko python-dotenv
WORKDIR /opt/ccdc26
CMD ["bash"]
